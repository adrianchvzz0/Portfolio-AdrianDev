---
import Section from "../components/Section.astro";

const PROJECTS = [
    {
        title: "ecoapp",
        description:
            "Ecoapp is a application for monitoring the devices eco-Tinaco in real time about temperature, level and more.",
        image: "/src/assets/projects/ecoinnova-mockup2.webp",
        link: "https://github.com/adrianchvzz0/ecoapp",
        tags: ["Flutter", "Dart", "Firebase"],
    },
    {
        title: "DLI Parking",
        description:
            "DLI Parking is an application designed to efficiently manage parking lots and streamline resident access. Additionally, it helps reduce the use of physical tickets, optimizing the process and minimizing paper waste.",
        image: "/src/assets/projects/dli-parking.webp",
        link: "https://project2.com",
        tags: ["Flutter", "Dart", "Firebase"],
    },
    {
        title: "Ticketito",
        description: "Project 3 description",
        image: "/src/assets/project3.png",
        link: "https://project3.com",
        tags: [
            "JavaScript",
            "React",
            "Firebase",
            "Node.js",
            "Express",
            "TailwindCSS",
        ],
    },
];
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    {
        PROJECTS.map((project) => (
            <article class="group">
                <a href={project.link} class="relative block">
                    <div class="relative flex flex-col h-full overflow-hidden rounded-xl bg-[#0a071c] shadow-lg shadow-purple-500/30 transition-all duration-500 hover:scale-105">
                        <div class="p-4">
                            <h3 class="text-xl font-semibold text-white mb-2">
                                {project.title}
                            </h3>
                            <p class="text-sm text-white/80 line-clamp-3 mb-4">
                                {project.description}
                            </p>
                        </div>
                        <div class="relative">
                            <img
                                class="w-full aspect-video object-cover"
                                src={project.image}
                                alt={project.title}
                            />
                            <div class="absolute inset-0 h-full bg-gradient-to-b from-transparent via-black/20 to-black/60 opacity-0 group-hover:opacity-100 transition-all duration-500">
                                <div class="absolute bottom-0 left-0 right-0 p-4 flex flex-wrap gap-2 translate-y-full group-hover:translate-y-0 transition-all duration-500">
                                    {project.tags.map((tag) => (
                                        <span class="bg-purple-500/90 px-2 py-1 text-xs rounded-full text-white">
                                            {tag}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </article>
        ))
    }
</div>
